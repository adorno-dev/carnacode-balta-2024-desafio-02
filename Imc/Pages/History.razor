    @page "/history"
    @inject ILocalStorageService localStorage

    <form data-enhance class="full overflow-auto">
        <img src="assets/icon-no-bg.png" class="icon" alt="" @onclick="GoToMain">

        <h2>Hist√≥rico</h2>

        <input type="search" placeholder="Pesquisar..." value="@SearchTerm" @oninput="SearchTermChanged" />

        <ul>
            @if (recordList is not null && recordList.Any())
            {
                foreach (var record in recordList)
                {
                    <li>
                        <section><small class="@record.Color">@record.IMC</small></section>
                        <div>
                            <div>
                                <b>@record.Title  @record.Emoji</b>
                                <span>@record.GetShortTimestamp()</span>
                            </div>
                            <p>@record.Description</p>
                        </div>
                    </li>
                }
            }
        </ul>
    </form>